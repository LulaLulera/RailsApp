<p id="notice"><%= notice %></p>

<h1>Notes</h1>
</table>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Text</th>
      <th scope="col">User</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.title %></td>
        <td><%= note.text %></td>
        <td><%= note.user %></td>
        <td>
          <div class="btn-group" role="group">
            <%= button_to 'Show', note ,class:"btn btn-outline-success m-1" %>
            <%= button_to 'Edit', edit_note_path(note),class:"btn btn-outline-warning m-1" %>
            <%= button_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } ,class:"btn btn-outline-danger m-1"%>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

